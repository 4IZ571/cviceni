{varType App\Model\Entities\Cart $cart}
{snippet}
  <div>

    {if empty($cart) || $cart->getTotalCount()==0}
      košík je prázdný
    {else}
      {var $cartTotalCount = $cart->getTotalCount();}
      v košíku je {$cartTotalCount} { ($cartTotalCount==1 ? 'položka' : ($cartTotalCount: < 5 ? 'položky' : 'položek'))} za {$cart->getTotalPrice()|number:0,',',' '} Kč
    {/if}

  </div>
{/snippet}